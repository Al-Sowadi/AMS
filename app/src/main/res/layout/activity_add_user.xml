<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/F1"
    tools:context=".AddUser">
  <TextView
      android:text="Welcome to add user section"
      android:gravity="center"
      android:textSize="28sp"
      android:layout_marginRight="25dp"
      android:layout_marginLeft="25dp"
      android:textAllCaps="true"
      android:padding="10dp"
      android:layout_marginTop="10dp"
      android:textStyle="bold|normal|italic"
      android:textColor="@color/F3"
      android:background="@drawable/switch_trcks"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

  <androidx.cardview.widget.CardView
      app:cardCornerRadius="25dp"
      app:cardElevation="10dp"
      android:layout_gravity="center"
      android:layout_marginTop="1dp"
      android:layout_marginStart="5dp"
      android:layout_marginEnd="5dp"
      android:padding="10dp"
      app:cardUseCompatPadding="true"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
  <LinearLayout
      android:background="@drawable/switch_trcks"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/logIn"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_weight="1"
          android:background="@drawable/switch_trcks"
          android:gravity="center"
          android:paddingLeft="15dp"
          android:paddingTop="5dp"
          android:paddingRight="15dp"
          android:paddingBottom="5dp"
          android:text="Add User"
          android:textAlignment="center"
          android:textColor="@color/F3"
          android:textSize="16sp"
          android:textStyle="bold|normal" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/logInLayout"
        android:background="@drawable/swstyle"
        android:padding="15dp"
        android:gravity="center"
       android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputLayout
          android:hint="First Name"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="5dp"
          app:shapeAppearanceOverlay="@style/Button4"
          app:hintTextColor="#4E4A4A"
          app:boxStrokeColor="#4E4A4A"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          app:boxStrokeWidth="1dp"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPersonName|textEmailAddress"
            android:id="@+id/Add_First_Name"
            android:ems="10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
          android:hint="Last Name"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          app:shapeAppearanceOverlay="@style/Button4"
          app:hintTextColor="#4E4A4A"
          app:boxStrokeColor="#4E4A4A"
          app:boxStrokeWidth="1dp"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPersonName|textEmailAddress"
            android:id="@+id/Add_last_Name"
            android:ems="10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:hint="Age"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          app:shapeAppearanceOverlay="@style/Button4"
          app:hintTextColor="#4E4A4A"
          app:boxStrokeColor="#4E4A4A"
          app:boxStrokeWidth="1dp"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPersonName|textEmailAddress"
            android:id="@+id/Add_age"
            android:ems="10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </com.google.android.material.textfield.TextInputLayout>
      <RadioGroup
          android:id="@+id/radio_group_register_gender"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="5dp"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/pinkColor"
            android:text="Female"
            android:textColor="#555555"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:buttonTint="@color/pinkColor"
            android:text="Male"
            android:textColor="#555555"
            android:textSize="16sp" />

      </RadioGroup>
      <RadioGroup
          android:id="@+id/radio_group_register_Level"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingLeft="5dp"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_Admain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/pinkColor"
            android:text="Admain"
            android:textColor="#555555"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/radio_stuff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:buttonTint="@color/pinkColor"
            android:text="Teacher"
            android:textColor="#555555"
            android:textSize="14sp" />
        <RadioButton
            android:id="@+id/radio_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:buttonTint="@color/pinkColor"
            android:text="Student"
            android:textColor="#555555"
            android:textSize="14sp" />

      </RadioGroup>
      <com.google.android.material.textfield.TextInputLayout
          android:hint="Email or User Name"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          app:shapeAppearanceOverlay="@style/Button4"
          app:hintTextColor="#4E4A4A"
          app:boxStrokeColor="#4E4A4A"
          app:boxStrokeWidth="1dp"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPersonName|textEmailAddress"
            android:id="@+id/Add_eMail"
            android:ems="10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </com.google.android.material.textfield.TextInputLayout>
      <com.google.android.material.textfield.TextInputLayout
          android:hint="Password"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          app:shapeAppearanceOverlay="@style/Button4"
          app:hintTextColor="#4E4A4A"
          app:boxStrokeColor="#4E4A4A"
          app:boxStrokeWidth="1dp"
          app:endIconMode="password_toggle"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/Add_passwords"
            android:ems="10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:hint="Password"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:background="@drawable/swstyle"
          android:minHeight="55dp"
          app:shapeAppearanceOverlay="@style/Button4"
          app:hintTextColor="#4E4A4A"
          app:boxStrokeColor="#4E4A4A"
          app:boxStrokeWidth="1dp"
          app:endIconMode="password_toggle"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/Add_repasswords"
            android:ems="10"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
      </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/add_userbtn"
        android:text="Add"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:elevation="15dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/pinkColor"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/Button5"
        app:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

  </LinearLayout>
  </androidx.cardview.widget.CardView>
  <ProgressBar
      android:id="@+id/progressBar"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="center|bottom"
      android:layout_marginBottom="20dp"
      android:visibility="gone" />

</LinearLayout>
